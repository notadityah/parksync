# Global Environment Configuration for ParkSync
# This file contains shared environment variables for both frontend and backend

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/parksync_db

# For Digital Ocean PostgreSQL (update with your actual credentials):
# DATABASE_URL=postgresql://username:password@your-db-cluster-do-user-123456-0.db.ondigitalocean.com:25060/parksync?sslmode=require

# =============================================================================
# API CONFIGURATION  
# =============================================================================
MELBOURNE_API_URL=https://data.melbourne.vic.gov.au/api/explore/v2.1

# Backend API URL (for frontend to connect to backend)
API_URL=http://localhost:8000

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=ParkSync
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# CORS SETTINGS
# =============================================================================
# Frontend URLs that can access the backend API
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "https://your-domain.com"]

# =============================================================================
# DATA REFRESH SETTINGS
# =============================================================================
# How often to refresh parking data (in minutes)
REFRESH_INTERVAL_MINUTES=10

# API rate limiting
API_RATE_LIMIT=100

# =============================================================================
# FRONTEND SPECIFIC (Vite requires VITE_ prefix)
# =============================================================================
VITE_API_URL=http://localhost:8000
VITE_APP_NAME=ParkSync
VITE_APP_VERSION=1.0.0
VITE_DEBUG=true

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# Uncomment and update these for production deployment:
# DATABASE_URL=postgresql://prod_user:prod_pass@prod_host:5432/parksync_prod
# API_URL=https://api.your-domain.com
# VITE_API_URL=https://api.your-domain.com
# ENVIRONMENT=production
# DEBUG=false
# CORS_ORIGINS=["https://your-domain.com"]
